<h1><%=t("activerecord.models.cliente") %></h1>

<table>
  <tr>
    <th><%=t("activerecord.attributes.cliente.nombre_comercial") %></th>
    <th><%=t("activerecord.attributes.cliente.razon_social") %></th>
    <th><%=t("activerecord.attributes.cliente.codigo_interno") %></th>
    <th><%=t("activerecord.attributes.cliente.cuit") %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <%= content_tag_for(:tr, @clientes) do |cliente| %>
    <td><%= cliente.nombre_comercial %></td>
    <td><%= cliente.razon_social %></td>
    <td><%= cliente.codigo_interno %></td>
    <td><%= cliente.cuit %></td>
    <td><%= link_to t("scaffoldi18n.show"), cliente %></td>
    <td><%= link_to t("scaffoldi18n.edit"), edit_cliente_path(cliente) %></td>
    <td><%= link_to t("scaffoldi18n.destroy"), cliente, confirm: t("scaffoldi18n.are_you_sure?"), method: :delete %></td>
  <% end %>
</table>

<br />

